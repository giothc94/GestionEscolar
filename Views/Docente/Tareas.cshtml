@{
    Layout = "_Docente";
}
<div class="page-dashboard pt-3">
    <div class="alert alert-success" role="alert">
        <a href="/Docente/Index" class="alert-link">Docente</a><strong class="pr-1 pl-2">></strong>
        <a  class="alert-link">Tareas</a><strong class="pr-1 pl-2">></strong>
    </div>
    
    <div class="page-content pt-4">
        <div class="row justify-content-center w-auto">
            <div class="col-5">
                <div class="list-group box-shadow">
                    <a class="list-group-item list-group-item-action text-white bg-primary" style="cursor: auto;">
                        Pendientes
                    </a>
                    <a href="/Revision/Index" class="list-group-item list-group-item-action">Revisar tarea: Programacion Visual II</a>
                    <a href="/Revision/Index" class="list-group-item list-group-item-action">Revisar tarea: Matematica financiera</a>
                </div>
                <div class="list-group mt-3 box-shadow">
                    <a class="list-group-item list-group-item-action text-white bg-primary" style="cursor: auto;">
                        Activas
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">Revisar tarea: Programacion Visual II</a>
                    <a href="#" class="list-group-item list-group-item-action">Revisar tarea: Matematica financiera</a>
                </div>
            </div>
            <div class="col-7">
                <div class="card box-shadow">
                    <div class="card-body">
                        <p class="h2">
                            Publicar tarea
                        </p>
                        <hr>
                        <div class="form-group">
                            <label for="materia-tarea">Selecciona una materia</label>
                            <select id="materia-tarea" class="form-control">
                                <option>-- Selecciona una materia --</option>
                                <option>Matematica financiera</option>
                                <option>Programacion visual II</option>
                                <option>Seguridad informatica</option>
                                <option>Emprendimiento</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="titulo-tarea">Ingresa el titulo de la tarea</label>
                            <input id="titulo-tarea" class="form-control" type="text">
                        </div>
                        <div class="form-group">
                            <label for="descripcion-tarea">Ingrese la descripcion de la tarea</label>
                            <textarea id="descripcion-tarea" class="form-control" row="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="horas-tarea">Limite de tiempo</label><br>
                            <small class="text-danger">*El tiempo contara desde el momento de su publicacion</small>
                            <select id="horas-tarea" class="form-control">
                                <option>-- Selecciona el tiempo limite --</option>
                                <option>2 Horas</option>
                                <option>4 Horas</option>
                                <option>8 Horas</option>
                                <option>24 Horas</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="archivo-tarea">Selecciona un archivo adjunto para la tarea (<label class="text-info">Opcional</label>)</label>
                            <input type="file" class="form-control-file" id="archivo-tarea">
                        </div>
                        <div class="form-group">
                            <input class="form-control btn btn-info mt-2" type="button" value="Publicar tarea">
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

</div>