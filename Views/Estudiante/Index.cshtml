@{
    Layout = "_Estudiante";
}
<div class="page-dashboard pt-3">
    <div class="page-content pt-4">
        <div class="card mt-4 box-shadow-dark">
            <div class="card-body">
                <div class=" card-title text-right h2 text-uppercase text-dark">Reporte</div>
                    <hr>
                    <div class="row w-100 justify-content-center m-0">
                        <div class="col-12">
                            <table class="w-100">
                                <thead>
                                    <th class="bg-secondary text-white celda-head">Asignatura</th>
                                    <th class="bg-secondary text-white celda-head">C.I</th>
                                    <th class="bg-secondary text-white celda-head">Nota Deberes</th>
                                    <th class="bg-secondary text-white celda-head">Nota Foros</th>
                                    <th class="bg-secondary text-white celda-head">Nota Pruebas</th>
                                    <th class="bg-secondary text-white celda-head">Nota Proyecto</th>
                                    <th class="bg-secondary text-white celda-head">Promedio</th>
                                </thead>
                                <tbody>
                                    @foreach (var reporte in ViewBag.reporte as List<Reporte>)
                                    {
                                        <tr>
                                            <td class="celda">@reporte.IdMateriaNavigation.NombreMateria</td>
                                            <td class="celda">@reporte.IdEstudianteNavigation.CedulaEstudiante</td>
                                            <td class="celda">
                                                <label>@reporte.NotaDeberes</label>
                                            </td>
                                            <td class="celda">
                                                <label>@reporte.NotaForos</label>
                                            </td>
                                            <td class="celda">
                                                <label>@reporte.NotaPrueba</label>
                                            </td>
                                            <td class="celda">
                                                <label>@reporte.NotaProyecto</label>
                                            </td>
                                             <td class="celda">
                                                <label>@Convert.ToDouble(@Convert.ToDouble(@reporte.NotaDeberes + @reporte.NotaForos + @reporte.NotaPrueba + @reporte.NotaProyecto)/4) </label>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>


