@{
    Layout = "_Admin";
}
<div class="display-3">
    Bienvenido 
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title display-4">
                    Carreras
                </div>
                @foreach (var carrera in ViewData["listaCarreras"] as List<CarreraFull>)
                {
                    <small class="h4">@carrera.NombreCarrera</small><br>
                    <div class="d-flex flex-row flex-wrap mb-3">
                        @foreach (var nivel in @carrera.Niveles)
                        {
                            @if(@nivel.Materia.Any())
                            {
                                <div class="list-group mr-2">
                                    <small class="list-group-item active">Nivel: @nivel.Nivel1</small>
                                    @foreach (var materia in @nivel.Materia)
                                    {
                                                    <div class="list-group-item">
                                                        <small> <strong>Materia: </strong> @materia.NombreMateria</small><br>
                                                        <small> <strong>Docente: </strong> @materia.IdDocenteNavigation.ApellidoUno @materia.IdDocenteNavigation.ApellidoDos @materia.IdDocenteNavigation.NombreUno</small><br>
                                                    </div>
                                    }
                                </div>
                                <br>
                            }
                        }
                    </div>
                    <div>
                        <div></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>