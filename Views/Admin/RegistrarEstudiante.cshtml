<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-route="Ingresar">Inicio</a></li>
                <li class="breadcrumb-item" aria-current="page">Registro de estudiantes</li>
            </ol>
        </nav>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-4">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Buscar, C.I Estudiante" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
        </form>
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title">Lista</div>
                <div style="height: 400px;overflow: auto;">
                    @for (int i = 0; i < 50; i++)
                    {
                        <div class="border border-dark rounded p-2 mb-2 d-flex flex-wrap justify-content-between align-items-center">
                            <div>
                                <small>Cedula: @i</small><br>
                                <small>Nombre: @i</small><br>
                                <small>Carrera: @i</small><br>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="editar" class="btn btn-warning">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-8">
        <form>
            <div class="card">
                <div class="card-body">
                    <div class="card-title h2">Registro de Estudiante</div>
                    <div class="form-group">
                        <label for="cedula">Cedula</label>
                        <input id="cedula" class="form-control" type="text" placeholder="C.I">
                    </div>
                    <div class="form-group">
                        <label>Nombres</label>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <input class="form-control" name="primerNombre" type="text" placeholder="Primer nombre">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <input class="form-control" name="segundoNombre" type="text" placeholder="Segundo nombre">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <input class="form-control" name="primerApellido" type="text" placeholder="Primer apellido">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <input class="form-control" name="segundoApellido" type="text" placeholder="Segundo apellido">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="materia">Carrera</label>
                        <select id="materia" class="form-control">
                            <optgroup>
                                @for (int i = 0; i < 4; i++)
                                {
                                    <option>carrera @i</option>
                                }
                            </optgroup>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="materia">Nivel</label>
                        <select id="materia" class="form-control">
                            <optgroup>
                                @for (int i = 0; i < 4; i++)
                                {
                                    <option>Nivel @i</option>
                                }
                            </optgroup>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-success form-control" value="Registrar" type="submit">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>